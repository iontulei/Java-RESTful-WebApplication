extends ../snippets/base

block title
    title NoteBridge - Reset Password

block css
    link(href='../static/css/login.css' rel='stylesheet')
    link(href='../static/css/samples/support-chat.css' rel='stylesheet')
    link(href='../static/css/samples/chat.css' rel='stylesheet')
    link(href='../static/css/samples/notifications.css' rel='stylesheet')

block scripts
    script(type='module' charset='utf-8' src='../static/scripts/register.js')
    script(type='module' charset='utf-8' src='../static/scripts/support-chat.js')

block modals
    include ../snippets/nav.pug
    +snippet({message: "home"})

    include ../snippets/support-chat.pug
    include ../snippets/chat.pug
    include ../snippets/notifications.pug

block content
    main.register
        .container
            .row
                .col-md-12.col-lg-6
                    .register__title
                        | Reset
                        span.highlighted  your
                        |  password.
                    form#resetForm.register__form(action='/reset-password' method='POST')
                        .input-field
                            .input-field
                                label.input-label(for='resetPassword') Password
                                input#resetPassword.input(type='password' name='resetPassword' required='')
                            .input-field
                                label.input-label(for='resetRepeatPassword') Repeat password
                                input#resetRepeatPassword.input(type='password' name='resetRepeatPassword' required='')
                            .register__forgot-password
                        input.button.register__btn(type='submit' value='Reset')
                .col-md-0.col-lg-6
                    .register__image
                        img(src='../static/images/login-illustration-1.svg' alt='Illustration')

