extends ../snippets/base

block title
    title NoteBridge - Profile

block css
    link(href='../static/css/profile.css' rel='stylesheet')
    link(href='../static/css/samples/chat.css' rel='stylesheet')
    link(href='../static/css/samples/notifications.css' rel='stylesheet')
    link(href='../static/css/samples/support-chat.css' rel='stylesheet')

block scripts
    script(type='module' charset='utf-8' src='../static/scripts/profile.js')
    script(type='module' charset='utf-8' src='../static/scripts/support-chat.js')

block modals
    include ../snippets/nav.pug
    +snippet({message: "home"})

    include ../snippets/support-chat.pug
    include ../snippets/chat.pug
    include ../snippets/notifications.pug
    include ../modals/view-review-modal.pug



block content

    main.profile
        .container
            .row
                .col-sm-4.col-lg-3
                    .profile__image.profile-image
                        img(src='#' alt='Profile')
                    .profile__info
                        p
                            span.highlighted Instruments:
                    .profile__instruments
                .col-sm-8.col-lg-6
                    .profile__title
                        span.profile__name Unknown
                        span.profile__location
                            img(src='../static/images/icons/location.svg' alt='Location')
                            |  Unknown
                    .profile__status.highlighted  Student
                    .profile__description
                        | Hi! Add a description about yourself! What music styles do you prefer? Where did you obtain your instrument experience? Add some lessons and a video about yourself !
                        | Do not forget to set up your profile in
                        span.highlighted-first-color  Edit Profile
                        |  menu !
                    .profile__buttons

                .col-md-0.col-lg-3
                    .profile__illustration
                        img(src='../static/images/profile-illustration.svg' alt='Illustration')
    section.profile-lessons
        .container
            .row

